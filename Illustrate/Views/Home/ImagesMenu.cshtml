<div class="container text-center">
    <div class="row gx-0 gx-lg-4 justify-content-center row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 row-cols-xl-auto  g-1 g-lg-3 mb-3">
        @{
            var viewNames = new List<string> { "AP", "BC", "MV", "Laser" };

            foreach (var viewName in viewNames)
            {
                <div class="col menu-item" data-viewName="@viewName">
                    <div class="bg-light text-center p-0 border border border-dark rounded-3">
                        <a style="text-decoration: none;" class="menu-link bg-light text-black w-100" asp-controller="@viewName" asp-action="ImagesMenu" asp-route-viewName="@viewName">@viewName</a>
                    </div>
                </div>
            }
        }
    </div>
</div>
