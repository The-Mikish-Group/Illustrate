@{
    Func<string, string, string> IsLinkSelected = (controller, action) =>
    {
        var url = Url.Action(action, controller);
        var currentUrl = Context.Request.Path;

        return currentUrl.Equals(url, StringComparison.OrdinalIgnoreCase) ? "selected" : "";
    };


    // Overall Organization
    string ogSite_Name = "The Mikish Group";
    string siteName = "Illustrate";
    string siteNameShort = siteName;
    string siteURL = "https://illustrate.net";   

    string pageShareFolder = siteURL + "/Content/PageShares/";
    string pageShareImage = "BlueSun-ps.png";
    string pageShareImageHeight = "1200";
    string pageShareImageWidth = "1200";
    string ogTitle = ViewBag.Message + " | " + siteNameShort; ;
    string ogDescription = "Enjoying Life!";
    string ogURL = siteURL;
    string canonical = siteURL;
    string ogImage = pageShareFolder + pageShareImage;
    string ogImageWidth = pageShareImageWidth;
    string ogImageHeight = pageShareImageHeight;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="@ogDescription" />
    <link rel="canonical" href="@canonical" />

    <!-- Link Share Setup -->
    <!-- This info is used for the card shown when you share a link on the web (I call it "Link Share or Page Share"). -->
    <!-- (more info here: https://ogp.me/) -->
    <!-- Default FB App ID unused -->
    <meta property="fb:app_id" content="966242223397117" />

    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:title" content="@ogTitle" />
    <meta property="og:determiner" content="The" />
    <meta property="og:description" content="@ogDescription" />
    <meta property="og:site_name" content="@ogSite_Name" />
    <meta property="og:url" content="@ogURL" />
    <meta property="og:image" content="@ogImage" />
    <meta property="og:image:url" content="@ogImage" />
    <meta property="og:image:secure_url" content="@ogImage" />
    <meta property="og:image:alt" content="Share Image" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="@ogImageWidth" />
    <meta property="og:image:height" content="@ogImageHeight" />

    <!-- Twitter Link Share Setup -->
    <!-- (more info here: https://developer.twitter.com/en/docs/twitter-for-websites/cards/overview/markup) -->
    <meta name="twitter:card" content="photo" />
    <meta name="twitter:title" content="@ogTitle" />
    <meta name="twitter:image" content="@ogImage" />
    <meta name="twitter:image:width" content="@ogImageWidth" />
    <meta name="twitter:image:height" content="@ogImageHeight" />



    <!-- Google Site Verification -->
    <meta name="google-site-verification" content="23ZjV4j9CxM5SWQXeC7pB-ylHq3qhcPpyoncr5A7GnA" />

    <!-- FavIcon(s) -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/content/icons/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/content/icons/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/content/icons/favicon-32x32.png" />
    <link rel="manifest" href="/site.webmanifest">
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["ViewName"] - Illustrate Net</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script async defer src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Site Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Illustrate.styles.css" asp-append-version="true" />

</head>

<body>    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @*  <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Illustrate</a> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Home Link -->
                        <li class="nav-item">
                            <a class="nav-link menu-link @(IsLinkSelected("Home", "Index"))" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- Contact Link -->
                        <li class="nav-item">
                            <a class="nav-link menu-link @(IsLinkSelected("Home", "Contact"))" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>

                        <!-- Privacy Link -->
                        <li class="nav-item">
                            <a class="nav-link menu-link @(IsLinkSelected("Home", "Privacy"))" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- TOS Link -->
                        <li class="nav-item">
                            <a class="nav-link menu-link @(IsLinkSelected("Home", "TOS"))" asp-area="" asp-controller="Home" asp-action="TOS">TOS</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted text-center">
        <div class="container pt-2">
        &copy; 1998-2024 - <a class="text-dark text-muted text-center" href="@siteURL">@ogSite_Name</a>
        </div>
    </footer>

</body>
</html>