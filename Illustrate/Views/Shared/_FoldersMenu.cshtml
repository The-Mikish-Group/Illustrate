@{
    // Read the folder names in the folder location
    var folders = Directory.GetDirectories(System.IO.Path.Combine(Directory.GetCurrentDirectory(), string.Format("wwwroot/Content/{0}", "Images")))
                           .Select(folder => System.IO.Path.GetFileName(folder))
                           .ToList();
}

<!-- Folder Selection Menu -->
<div class="container text-center">
    <div class="row justify-content-center row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 row-cols-xl-auto g-3">

        @foreach (var folder in folders)
        {
            <div class="col">
                <div class="card">
                    <div class="card-body text-center">
                        <a class="menu-link text-black" asp-controller="home" asp-action="Images" asp-route-viewName="@folder">@folder</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>


    
       